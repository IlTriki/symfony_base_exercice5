{# templates/task/delete.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Supprimer la Tâche{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-6">
        <h1 class="text-2xl font-bold mb-4">Êtes-vous sûr de vouloir supprimer cette tâche ?</h1>

        <div class="flex space-x-4">
            <form action="{{ path('task_delete', { 'id': task.id }) }}" method="POST">
                <button type="submit" class="bg-red-500 text-white px-6 py-2 rounded hover:bg-red-700">Supprimer</button>
            </form>
            <a href="{{ path('task_list') }}" class="bg-gray-300 text-gray-700 px-6 py-2 rounded hover:bg-gray-400">Annuler</a>
        </div>
    </div>
{% endblock %}
